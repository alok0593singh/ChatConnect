{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@assets/*": ["src/assets/*"],
      "@connect/*": ["src/modules/connect/*"],
      "@settings/*": ["src/modules/settings/*"]
    },
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
  ],
}